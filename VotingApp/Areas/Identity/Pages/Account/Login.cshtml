@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<body id="loginimg">
<h1 style="text-align:center;">@ViewData["Title"]</h1>

    <div class="container">
        <section>
            <form id="account" method="post">
                <div style="border-radius:30px; box-shadow: 0px 30px 50px 0px rgba(0, 0, 0, 0.2); background-color:transparent; width: 40%; margin: 30px auto; padding: 5px 5px 5px 5px; backdrop-filter:blur(2px);">
                <h4 style="text-align:center;">To add your TV Show reviews</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div style="text-align:center;" class="form-group row">
                    <label asp-for="Input.Email" class="col-sm-4 col-form-label" >Email ID :</label>
                    <i style="padding: 10px; background: dodgerblue; color: white; height:100%; float:right; text-align: center;" class="fa fa-user col-sm-1 col-form-label"></i>
                    <input asp-for="Input.Email" style="background-color:transparent; float:right;" class="form-control col-sm-6" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div style="text-align:center;" class="form-group row">
                    <label asp-for="Input.Password" class="col-sm-4 col-form-label" >Password :</label>
                    <i style="padding: 10px; background: dodgerblue; color: white; height:100%; float:right; text-align: center;" class="fa fa-envelope col-sm-1 col-form-label"></i>
                    <input asp-for="Input.Password" style="background-color:transparent; float:right;" class="form-control col-sm-6" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div style="text-align:center;" class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div style="text-align:center;" class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div style="text-align:center;" class="form-group">
                    
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
                </div>
            </form>
        </section>
    
